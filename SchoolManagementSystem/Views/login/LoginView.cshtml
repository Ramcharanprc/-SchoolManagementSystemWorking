@model SchoolManagementSystem.Models.Employee
@{ ViewBag.Title = "LoginView"; }
<link href="~/Content/style.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div class="container body-content">
    <!--//header-->
    <div>
        <div id="login-div" class="sub-main-w3">
            @using (Html.BeginForm("Aurtherize", "login", FormMethod.Post, new { @name = "loginForm" }))
            {
<h2 class="loginText">Login Here</h2>
                <div class="pom-agile">
                    <span class="fa fa-user" aria-hidden="true"></span>
                    <!---
                    <input placeholder="E-mail" name="Name" class="user" type="email" required="">-->
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeHolder = "Email", type = "email", @class = "textBox", required = "required" } })

                </div>
                                <div class="pom-agile">
                                    <span class="fa fa-key" aria-hidden="true"></span>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeHolder = "Password", type = "password", @class = "textBox", id = "password", required = "required" } })
                                    <i class="fa fa-eye" id="fontAwesome" onclick='changeType("password", "fontAwesome")'></i>
                                </div>
                                                <div>
                                                    <label class="field-validation-error errorColor" id="error" style="color:red">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                                                </div>
                                                                <div class="sub-w3l">
                                                                    <div class="sub-agile">
                                                                        <input type="checkbox" id="brand1" value="">
                                                                        <label for="brand1">
                                                                            <span></span>Remember me
                                                                        </label>
                                                                    </div>
                                                                    <a href="#">Forgot Password?</a>
                                                                    <div class="clear"></div>
                                                                </div>
                                                                                <div class="right-w3l buttonMargin">
                                                                                    <input type="submit" value="Login">
                                                                                </div>}
        </div>
    </div>
</div>
